<section class="welcome">
  <h1 class="text-center p-2">MONGOFLIX</h1>
</section>
<section class="container justify-content-center d-flex gap-5 m-5 mx-auto">
  <article class="login border border-3 rounded-5 border-info p-4">
    <form action="/api/login" id="login" method="post">
      <h3>LOGIN</h3>
      <div class="mb-3 row">
        <label for="loginUser" class="col-sm-2 col-form-label">Username</label>
        <div class="col-sm-10 me-1">
          <input type="text" class="form-control" id="loginUser" name="user" required />
        </div>
      </div>
      <div class="mb-3 row">
        <label for="loginPassword" class="col-sm-2 col-form-label mr-5">Password</label>
        <div class="col-sm-10 me-1">
          <input type="password" class="form-control" id="loginPassword" name="password" required />
        </div>
      </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Ingresar</button>
      </div>
    </form>
  </article>
  <article class="register border border-3 rounded-5 border-info p-4">
    <form action="/api/register" method="post" id="registerForm">
      <h3>REGISTER</h3>
      <div class="mb-3 row">
        <label for="registerUser" class="col-sm-2 col-form-label">Username</label>
        <div class="col-sm-10 me-1">
          <input type="text" class="form-control" id="registerUser" name="user" required />
        </div>
      </div>
      <div class="mb-3 row">
        <label for="registerPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10 me-1">
          <input type="password" class="form-control" id="registerPassword" name="password" required />
        </div>
      </div>
      <div class="mb-3 row">
        <label for="registerEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10 me-1">
          <input type="email" class="form-control" id="registerEmail" name="email" required />
        </div>
      </div>
      <div class="col-auto align-self-end">
        <button type="submit" class="btn btn-primary mb-3">Registrarse</button>
      </div>
    </form>
  </article>
</section>
{{#if error}}
  <div id="error"></div>
{{/if}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  setTimeout(() => {
    if (document.getElementById('error')) {
      Swal.fire({
        toast:
          true, position: "top-end", showConfirmButton: false, timer: 3000,
        timerProgressBar: true, text: 'Usuario o contraseña erróneas', icon: 'error',
        background: 'red', color: 'white'
      })
    }
  }, 1000);
</script>